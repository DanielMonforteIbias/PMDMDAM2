<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuál es tu equipo de fútbol favorito?"
        android:textColor="#FF00A1"
        android:textSize="24dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="233dp"
        android:layout_height="190dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="16dp">

        <RadioButton
            android:id="@+id/rbTalavera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Talavera C.F."
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/rbAlcazar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gimnástico de Alcázar"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/rbAlbacete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Albacete Balompié"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/rbOtros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otro equipo"
            android:textSize="18dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/txtEquipos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:layout_editor_absoluteX="20dp" />

    <CheckBox
        android:id="@+id/cbFutbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="No te gusta el fútbol???"
        app:layout_constraintTop_toBottomOf="@+id/txtEquipos"
        tools:layout_editor_absoluteX="26dp" />

</androidx.constraintlayout.widget.ConstraintLayout>